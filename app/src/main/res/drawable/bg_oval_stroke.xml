<?xml version="1.0" encoding="utf-8"?>
<shape
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="oval">

    <solid android:color="#AB47BC"/>

    <padding
        android:top="16dp"
        android:left="16dp"
        android:bottom="16dp"
        android:right="16dp"/>

    <size
        android:height="50dp"
        android:width="50dp"/>

    <gradient
        android:type="radial"
        android:gradientRadius="50dp"
        android:startColor="#AB47BC"
        android:endColor="@android:color/white"/>

    <stroke
        android:color="@android:color/black"
        android:width="2dp"
        android:dashWidth="10dp"
        android:dashGap="2dp"/>

</shape>